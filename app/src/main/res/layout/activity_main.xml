<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="230dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:alpha="0.95"
        android:src="@drawable/logo2" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/iv1"
        android:text="LEO"
        android:textColor="#2A2C05"
        android:textSize="80dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:alpha="0.9"
        android:layout_marginTop="270dp"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:drawablePadding="20dp"
        android:drawableTint="#2A2C05"
        android:text="USERNAME"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />
    <EditText
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:id="@+id/et1"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="300dp"
        />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et1"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="22dp"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawablePadding="20dp"
        android:drawableTint="#2A2C05"
        android:text="PASSWORD"
        android:alpha="0.95"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold"

        />
    <EditText
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:id="@+id/et2"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="380dp"
        />


    <TextView
        android:layout_width="170dp"
        android:layout_height="26dp"
        android:id="@+id/tv4"
        android:layout_below="@+id/et2"
        android:text="Forget Password?"
        android:textSize="20dp"
        android:layout_marginLeft="190dp"
        android:textColor="#2A2C05"
        android:textStyle="bold"
        android:alpha="0.8"
        />

    <Button
        android:id="@+id/b1"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="460dp"
        android:backgroundTint="#2A2C05"
        android:text="LOG IN"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="540dp"
        android:alpha="0.8"
        android:gravity="center"
        android:text="Not Using LEO?"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="560dp"
        android:alpha="0.9"
        android:gravity="center"
        android:text="Register NOw!"
        android:textColor="#2A2C05"
        android:textSize="45dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv7"
        android:drawableStart="@drawable/ic_baseline_location_on_24"
        android:layout_marginTop="640dp"
        android:drawableTint="#2A2C05"
        />

    <TextView
        android:id="@+id/tv8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv7"
        android:text="Locator"
        android:textColor="@color/black"
        android:textSize="21dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="640dp"
        android:layout_marginLeft="83dp"
        android:drawableStart="@drawable/ic_baseline_card_giftcard_24"
        android:drawableTint="#2A2C05" />

    <TextView
        android:id="@+id/tv10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv9"
        android:text="Offers"
        android:textColor="@color/black"
        android:textSize="21dp"
        android:textStyle="bold"
        android:layout_marginLeft="80dp"
        />

    <TextView
        android:id="@+id/tv11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="640dp"
        android:layout_marginLeft="170dp"
        android:drawableStart="@drawable/ic_baseline_check_box_outline_blank_24"
        android:drawableTint="#2A2C05" />

    <TextView
        android:id="@+id/tv12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv10"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-28dp"
        android:text="Products"
        android:textColor="@color/black"
        android:textSize="21dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv12"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="-28dp"
        android:text="Contact"
        android:textColor="@color/black"
        android:textSize="21dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="640dp"
        android:layout_marginLeft="250dp"
        android:drawableStart="@drawable/ic_baseline_phone_in_talk_24"
        android:drawableTint="#2A2C05" />

    <ImageView
        android:layout_width="370dp"
        android:layout_height="400dp"
        android:id="@+id/iv2"
        android:src="@drawable/logo2"
        android:layout_marginTop="640dp"
        android:layout_marginLeft="310dp"
    />




</RelativeLayout>